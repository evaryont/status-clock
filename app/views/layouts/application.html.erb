<% title = content_for?(:title) ? yield(:title) : "Clock Locations" %>
<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Clock Locations -- Update your Status Clock's displayed locations and where it thinks you are" %>">

    <title><%= title %></title>

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body class="<%= controller_name %> <%= action_name %> small-10 small-centered columns">

    <div id="container" class="container">
      <!-- Header and Nav -->
      <header>
        <%= render 'layouts/navigation' %>
        <%= render 'layouts/messages' %>
      </header>
      <!-- End Header and Nav -->

      <div role="main">

        <%= yield %>

      </div>

      <footer>
      Page Rendered in <%= sprintf('%.3f', (Time.now.usec - @start_time).abs / 1000000.0) %> seconds
      </footer>
    </div> <!--! end of #container -->

    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>
